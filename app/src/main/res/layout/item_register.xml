<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_register_mobile"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@null"
        android:hint="输入手机号码"
        android:inputType="number"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/co3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_register_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:background="@color/co3"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_get_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/background_login_verificatoin_code_botton"
            android:clickable="true"
            android:gravity="center"
            android:onClick="clickButton"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/co7"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/cb_register_see_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_pwd_look_on_off"
            android:button="@null"
            android:onClick="clickButton"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/co3"/>

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/background_login_verificatoin_code_botton"
        android:clickable="true"
        android:gravity="center"
        android:onClick="clickButton"
        android:text="注册"
        android:textColor="@color/co7"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_account_exist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:onClick="switchStatus"
        android:text="已有账号?"
        android:textColor="@color/login_text_color"
        android:textSize="12sp"/>

</LinearLayout>